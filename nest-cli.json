{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json"
  },
  "monorepo": true,
  "root": "apps/gateway/src",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "config": {
      "type": "application",
      "root": "apps/config",
      "entryFile": "main",
      "sourceRoot": "apps/config/src",
      "compilerOptions": {
        "tsConfigPath": "apps/config/tsconfig.app.json"
      }
    },
    "device": {
      "type": "application",
      "root": "apps/device",
      "entryFile": "main",
      "sourceRoot": "apps/device/src",
      "compilerOptions": {
        "tsConfigPath": "apps/device/tsconfig.app.json"
      }
    },
    "monitoring": {
      "type": "application",
      "root": "apps/monitoring",
      "entryFile": "main",
      "sourceRoot": "apps/monitoring/src",
      "compilerOptions": {
        "tsConfigPath": "apps/monitoring/tsconfig.app.json"
      }
    },
    "task": {
      "type": "application",
      "root": "apps/task",
      "entryFile": "main",
      "sourceRoot": "apps/task/src",
      "compilerOptions": {
        "tsConfigPath": "apps/task/tsconfig.app.json"
      }
    },
    "mqtt": {
      "type": "application",
      "root": "apps/mqtt",
      "entryFile": "main",
      "sourceRoot": "apps/mqtt/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mqtt/tsconfig.app.json"
      }
    },
    "host": {
      "type": "application",
      "root": "apps/host",
      "entryFile": "main",
      "sourceRoot": "apps/host/src",
      "compilerOptions": {
        "tsConfigPath": "apps/host/tsconfig.app.json"
      }
    }
  }
}
