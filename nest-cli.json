{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.build.json"
  },
  "monorepo": true,
  "root": "apps/gateway/src",
  "projects": {
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "gateway-frs-api": {
      "type": "application",
      "root": "apps/gateway/frs/api",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/frs/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/frs/api/tsconfig.app.json"
      }
    },
    "gateway-frs-websocket": {
      "type": "application",
      "root": "apps/gateway/frs/websocket",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/frs/websocket/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/frs/websocket/tsconfig.app.json"
      }
    },
    "microservice-access": {
      "type": "application",
      "root": "apps/access",
      "entryFile": "main",
      "sourceRoot": "apps/access/src",
      "compilerOptions": {
        "tsConfigPath": "apps/access/tsconfig.app.json"
      }
    },
    "microservice-caching": {
      "type": "application",
      "root": "apps/caching",
      "entryFile": "main",
      "sourceRoot": "apps/caching/src",
      "compilerOptions": {
        "tsConfigPath": "apps/caching/tsconfig.app.json"
      }
    },
    "microservice-robot": {
      "type": "application",
      "root": "apps/robot",
      "entryFile": "main",
      "sourceRoot": "apps/robot/src",
      "compilerOptions": {
        "tsConfigPath": "apps/robot/tsconfig.app.json"
      }
    },
    "microservice-config": {
      "type": "application",
      "root": "apps/config",
      "entryFile": "main",
      "sourceRoot": "apps/config/src",
      "compilerOptions": {
        "tsConfigPath": "apps/config/tsconfig.app.json"
      }
    },
    "microservice-device": {
      "type": "application",
      "root": "apps/device",
      "entryFile": "main",
      "sourceRoot": "apps/device/src",
      "compilerOptions": {
        "tsConfigPath": "apps/device/tsconfig.app.json"
      }
    },
    "microservice-monitoring": {
      "type": "application",
      "root": "apps/monitoring",
      "entryFile": "main",
      "sourceRoot": "apps/monitoring/src",
      "compilerOptions": {
        "tsConfigPath": "apps/monitoring/tsconfig.app.json"
      }
    },
    "microservice-task": {
      "type": "application",
      "root": "apps/task",
      "entryFile": "main",
      "sourceRoot": "apps/task/src",
      "compilerOptions": {
        "tsConfigPath": "apps/task/tsconfig.app.json"
      }
    },
    "mqtt": {
      "type": "application",
      "root": "apps/mqtt",
      "entryFile": "main",
      "sourceRoot": "apps/mqtt/src",
      "compilerOptions": {
        "tsConfigPath": "apps/mqtt/tsconfig.app.json"
      }
    },
    "host": {
      "type": "application",
      "root": "apps/host",
      "entryFile": "main",
      "sourceRoot": "apps/host/src",
      "compilerOptions": {
        "tsConfigPath": "apps/host/tsconfig.app.json"
      }
    }
  }
}
